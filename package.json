{
  "name": "kubozer",
  "version": "1.1.0",
  "description": "Contactlab build utility",
  "main": "dist/index.js",
  "scripts": {
    "lint": "xo",
    "pretest": "yarn run lint && yarn run build",
    "test": "nyc ava",
    "report": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "build": "babel src -d dist",
    "postbuild": "chmod +x dist/cli.js"
  },
  "bin": {
    "kubozer": "dist/cli.js"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "xo": {
    "esnext": true,
    "space": true,
    "rules": {
      "import/no-dynamic-require": 0,
      "capitalized-comments": 0,
      "no-multi-spaces": [
        "error",
        {
          "exceptions": {
            "VariableDeclarator": true,
            "ImportDeclaration": true
          }
        }
      ]
    },
    "ignores": [
      "test/**/*"
    ]
  },
  "ava": {
    "files": [
      "test/*.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/contactlab/kubozer.git"
  },
  "keywords": [
    "build",
    "minify",
    "vulcanize",
    "webpack",
    "kubozer",
    "es6",
    "projects",
    "polymer"
  ],
  "author": "Contactlab Product Team",
  "license": "Apache-2.0",
  "dependencies": {
    "babel-loader": "7.0.0",
    "fs-extra": "3.0.1",
    "has-flag": "2.0.0",
    "hashmark": "4.1.0",
    "meow": "3.7.0",
    "node-minify": "2.0.2",
    "onesky-utils": "1.0.0",
    "ora": "1.1.0",
    "pify": "2.3.0",
    "ramda": "0.23.0",
    "replace-in-file": "2.5.0",
    "semver": "5.3.0",
    "vulcanize": "1.15.2",
    "webpack": "2.2.1",
    "webpack-notifier": "1.5.0"
  },
  "devDependencies": {
    "ava": "0.19.1",
    "babel-cli": "6.24.1",
    "babel-preset-env": "1.5.0",
    "chalk": "1.1.3",
    "coveralls": "2.13.1",
    "execa": "0.6.3",
    "figures": "2.0.0",
    "get-stream": "3.0.0",
    "nyc": "10.3.2",
    "xo": "0.18.2"
  }
}
